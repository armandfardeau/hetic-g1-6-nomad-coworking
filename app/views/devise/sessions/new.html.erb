<div class='row'>
  <div class='col-md-4 col-md-offset-4 text-center'>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render 'shared/devise_errors' %>
        <br>
        <%= link_to 'Connexion avec Facebook', user_facebook_omniauth_authorize_path, class: 'btn btn-primary-fb' %>
        <hr>
        <div class='form-group'>
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, placeholder: 'Your email' %>
        </div>

        <div class='form-group'>
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: 'on', placeholder: 'Your password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class='form-group'>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class='actions'>
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
        </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>