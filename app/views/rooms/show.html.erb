<div class='panel panel-default'>
  <div class='panel-body'>


    <div class='row'>
      <div class='col-md-12'>
        <%= image_tag first_room_photos(@room, :original), class: 'img-responsive' %>
      </div>
    </div>
    <br>
    <div class='row'>
      <div class='col-md-8'>
        <div class='row'>
          <div class='col-md-3 text-center'>
            <%= image_tag avatar_url(@room.user), class: 'img-circle avatar-large' %>
            <br>
            <br>
            <%= @room.user.fullname %>
          </div>
          <div class='col-md-9'>
            <h4><%= @room.listing_name %></h4>
            <a href="#map" class="sidebar-link"><%= @room.address %></a>
            <a href="#average_rating" class="sidebar-link">
              <span id="average_rating_header" class="average_rating"></span> <%= @reviews.count %>
            </a>
            <div class='row text-center row-space-1'>
              <div class='col-sm-3'>
                <i class='fa fa-home fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-users fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-bed fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-bath fa-2x'></i>
              </div>
            </div>
            <div class='row text-center'>
              <div class='col-sm-3'>
                <%= @room.home_type %>
              </div>
              <div class='col-sm-3'>
                <%= @room.accommodate %> <%= @room.accommodate > 1 ? 'Travellers' : 'Traveller' %>
              </div>
              <div class='col-sm-3'>
                <%= @room.bed_room %> <%= @room.bed_room > 1 ? 'Beds' : 'Bed' %>
              </div>
              <div class='col-sm-3'>
                <%= @room.bath_room %> <%= @room.bath_room > 1 ? 'Bathrooms' : 'Bathroom' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-4 border'>
        <%= render 'reservations/form' %>
      </div>
    </div>


    <div class='row'>
      <div class='col-md-12'>
        <h2>About this apartment</h2>
        <p><%= @room.summary %></p>
      </div>
    </div>


    <div class='row'>
      <div class='col-md-2'>
        <p>Features</p>
      </div>
      <div class='col-md-10'>
        <div class='row'>
          <div class='col-md-6'>
            <ul class='equipments'>
              <li class='<%= 'text-line-through' unless @room.is_wifi %>'>Wifi</li>
              <li class='<%= 'text-line-through' unless @room.is_tv %>'>TV</li>
              <li class='<%= 'text-line-through' unless @room.is_closet %>'>Closet</li>
              <li class='<%= 'text-line-through' unless @room.is_shampoo %>'>Shampoo</li>
            </ul>
          </div>
          <div class='col-md-6'>
            <ul class='equipments'>
              <li class='<%= 'text-line-through' unless @room.is_kitchen %>'>Kitchen</li>
              <li class='<%= 'text-line-through' unless @room.is_breakfast %>'>Breakfast</li>
              <li class='<%= 'text-line-through' unless @room.is_heating %>'>Heating</li>
              <li class='<%= 'text-line-through' unless @room.is_air %>'>AC</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= nice_display_of_carousel(@room, :medium) %>
    </div>
  </div>

  <!-- Reviews -->

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'rooms/partials/comments' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= nice_display_of_google_maps(@room, '400px') %>
    </div>
  </div>


  <% room_nearby = @room.nearbys(2).limit(3) %>
  <% if room_nearby.blank? %>
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <p>This apartment feels lonely, why not had yours?</p>
            </div>
            <div class="panel-body">
              <%= link_to 'Add an apartment', new_room_path, class: 'btn btn-primary' %><br>
            </div>
          </div>
        </div>
      </div>
  <% else %>
      <h3>Near this apartment: </h3>
      <div class="row">
        <% for room in @room.nearbys(2).limit(3) %>
            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-heading preview">
                  <%= image_tag first_room_photos(room) %>
                </div>
                <div class="panel-body">
                  <%= link_to room.listing_name, room %><br>
                  (at <%= (room.distance*1.6).round(2) %> km)
                </div>
              </div>
            </div>
            </div>
        <% end %>
  <% end %>
</div>