<div class='panel panel-default'>
  <div class='panel-body'>


    <div class='row'>
      <div class='col-md-12'>
        <% unless @room.photos.blank? %>
            <%= image_tag @room.photos[0].image.url, class: 'img-responsive' if @room.photos.length > 0 %>
        <% end %>
      </div>
    </div>

    <br>


    <div class='row'>
      <div class='col-md-8'>
        <div class='row'>
          <div class='col-md-3 text-center'>
            <%= image_tag avatar_url(@room.user), class: 'img-circle avatar-large' %>
            <br>
            <br>
            <%= @room.user.fullname %>
          </div>
          <div class='col-md-9'>
            <h4><%= @room.listing_name %></h4>
            <%= @room.address %>
            <div class='row text-center row-space-1'>
              <div class='col-sm-3'>
                <i class='fa fa-home fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-users fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-bed fa-2x'></i>
              </div>
              <div class='col-sm-3'>
                <i class='fa fa-bath fa-2x'></i>
              </div>
            </div>
            <div class='row text-center'>
              <div class='col-sm-3'>
                <%= @room.home_type %>
              </div>
              <div class='col-sm-3'>
                <%= @room.accommodate %> <%= @room.accommodate > 1 ? 'Travellers' : 'Traveller' %>
              </div>
              <div class='col-sm-3'>
                <%= @room.bed_room %> <%= @room.bed_room > 1 ? 'Beds' : 'Bed' %>
              </div>
              <div class='col-sm-3'>
                <%= @room.bath_room %> <%= @room.bath_room > 1 ? 'Bathrooms' : 'Bathroom' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-4'>
        <!-- reservation form -->
      </div>
    </div>


    <div class='row'>
      <div class='col-md-12'>
        <h2>About this apartment</h2>
        <p><%= @room.summary %></p>
      </div>
    </div>


    <div class='row'>
      <div class='col-md-2'>
        <p>Features</p>
      </div>
      <div class='col-md-10'>
        <div class='row'>
          <div class='col-md-6'>
            <ul class='equipments'>
              <li class='<%= 'text-line-through' unless @room.is_wifi %>'>Wifi</li>
              <li class='<%= 'text-line-through' unless @room.is_tv %>'>TV</li>
              <li class='<%= 'text-line-through' unless @room.is_closet %>'>Closet</li>
              <li class='<%= 'text-line-through' unless @room.is_shampoo %>'>Shampoo</li>
            </ul>
          </div>
          <div class='col-md-6'>
            <ul class='equipments'>
              <li class='<%= 'text-line-through' unless @room.is_kitchen %>'>Kitchen</li>
              <li class='<%= 'text-line-through' unless @room.is_breakfast %>'>Breakfast</li>
              <li class='<%= 'text-line-through' unless @room.is_heating %>'>Heating</li>
              <li class='<%= 'text-line-through' unless @room.is_air %>'>AC</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% unless @room.photos.blank? %>
      <!-- Carousel -->
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <% if @room.photos %>
                <% @room.photos.each do |photo| %>
                    <ol class="carousel-indicators">
                      <li data-target="#myCarousel" data-slide-to="<%= photo.id %>" class="active"></li>
                    </ol>
                <% end %>
            <% end %>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% if @room.photos %>
                  <% @room.photos.each do |photo| %>
                      <div class="item <%= 'active' if photo.id == @room.photos[0].id %>">
                        <%= image_tag photo.image.url %>
                      </div>
                  <% end %>
              <% end %>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Précédent</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Suivant</span>
            </a>
          </div>
        </div>
      </div>
  <% end %>
  <!-- end of Carousel -->

  <!-- Google maps -->
  <% unless @room.latitude.blank? %>
      <div class="row">
        <div class="col-md-12">
          <div id="map"></div>

          <style>
            #map {
              height: 400px;
              width: 100%;
            }
          </style>

          <script>
              function initMap() {
                  var uluru = {lat: <%= @room.latitude %>, lng: <%= @room.longitude %>};
                  var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 15,
                      center: uluru
                  });
                  var marker = new google.maps.Marker({
                      position: uluru,
                      map: map
                  });
              }
          </script>
          <script async defer type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GMAPS_API_KEY'] %>&callback=initMap"></script>
        </div>
      </div>
  <% end %>
  <% room_nearby = @room.nearbys(2).limit(3) %>
  <% if room_nearby.blank? %>
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <p>This apartment feels lonely, why not had yours?</p>
            </div>
            <div class="panel-body">
              <%= link_to 'Add an apartment', new_room_path, class:'btn btn-primary' %><br>
            </div>
          </div>
        </div>
      </div>
  <% else %>
      <h3>Near this apartment: </h3>
      <div class="row">
        <% for room in @room.nearbys(2).limit(3) %>
            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-heading preview">
                  <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
                </div>
                <div class="panel-body">
                  <%= link_to room.listing_name, room %><br>
                  (à <%= (room.distance*1.6).round(2) %> km)
                </div>
              </div>
            </div>
            </div>
        <% end %>
  <% end %>
</div>