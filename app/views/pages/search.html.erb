<div id='wrapper'>
  <div id='sidebar'>
    <div id='widget'>
      <script>
          function initMap() {
              <% if @arr_rooms.length > 0 %>
              var uluru = {lat: <%= @arr_rooms[0].latitude %>, lng: <%= @arr_rooms[0].longitude %>};
              var map = new google.maps.Map(document.getElementById('widget'), {
                  zoom: 11,
                  center: uluru
              });
              <% else %>
              var uluru = {lat: 48.866667, lng: 2.333333};
              var map = new google.maps.Map(document.getElementById('widget'), {
                  zoom: 4,
                  center: uluru
              });
              <% end %>

              <% @arr_rooms.each do |room| %>
              var marker = new google.maps.Marker({
                  position: {lat: <%= room.latitude %>, lng: <%= room.longitude %>},
                  map: map,
                  title: "<%= room.listing_name %>"
              });
              <% end %>
          }
      </script>
      <script async defer
              src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GMAPS_API_KEY'] %>&libraries=places&callback=initMap">
      </script>
    </div>
  </div>
  <div id='article'>
    <div class='row'>
      <div class='col-md-12'>
        <%= search_form_for @search, url: search_path do |f| %>
            <div class='row'>
              <div class='col-md-3'>
                <%= text_field_tag :start_date, params[:start_date], placeholder: 'Arrival', class: 'form-control' %>
              </div>
              <div class='col-md-3'>
                <%= text_field_tag :end_date, params[:end_date], placeholder: 'Departure', class: 'form-control' %>
              </div>
              <div class='col-md-3'>
                <%= f.text_field :price_gteq, placeholder: 'Minimum budget', class: 'form-control' %>
              </div>
              <div class='col-md-3'>
                <%= f.text_field :price_lteq, placeholder: 'Maximum budget', class: 'form-control' %>
              </div>
            </div>

            <hr>

            <div class='row'>
              <div class='col-md-4'>
                <%= check_box_tag 'q[room_type_eq_any][]', 'Full accommodation' %> Full accommodation
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[room_type_eq_any][]', 'Private room' %> Private room
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[room_type_eq_any][]', 'Shared accommodation' %> Shared accommodation
              </div>
            </div>

            <hr>

            <div class='row'>
              <div class='col-md-4 select'>
                <div class='form-group'>
                  <label>Voyageurs ?</label>
                  <%= f.select :accommodate_gteq, [['1 traveller', 1], ['2 travellers', 2],
                                                   ['3 travellers', 3], ['4 travellers', 4], ['5 travellers', 5],
                                                   ['6 travellers', 6]], prompt: 'Select...',
                               class: 'form-control' %>
                </div>
              </div>

              <div class='col-md-4 select'>
                <div class='form-group'>
                  <label>Chambres ?</label>
                  <%= f.select :bed_room_gteq, [['1', 1], ['2', 2],
                                                ['3', 3], ['4', 4]], prompt: 'Select...',
                               class: 'form-control' %>
                </div>
              </div>

              <div class='col-md-4 select'>
                <div class='form-group'>
                  <label>Salles de bain ?</label>
                  <%= f.select :bath_room_gteq, [['1', 1], ['2', 2],
                                                 ['3', 3], ['4', 4]], prompt: 'Select...',
                               class: 'form-control' %>
                </div>
              </div>
            </div>

            <hr>

            <div class='row'>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_wifi_eq]', true %> Wifi
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_tv_eq]', true %> TV
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_closet_eq]', true %> Closet
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_shampoo_eq]', true %> Shampoo
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_kitchen_eq]', true %> Kitchen
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_breakfast_eq]', true %> Breakfast
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_heating_eq]', true %> Heating
              </div>
              <div class='col-md-4'>
                <%= check_box_tag 'q[is_air_eq]', true %> AC
              </div>
            </div>

            <br>

            <div class='row'>
              <%= f.submit 'Search', class: 'btn btn-primary' %>
            </div>


        <% end %>

        <hr>


        <div class='row'>
          <% if @arr_rooms.empty? %>
              No ad matches your criteria.
          <% else %>
              <% @arr_rooms.each do |room| %>
                  <div class='col-md-4'>
                    <div class='panel panel-default'>
                      <div class='panel-heading preview'>
                        <%= image_tag first_room_photos(room, :medium) %>
                      </div>
                      <div class='panel-body'>
                        <%= image_tag avatar_url(room.user), class: 'img-circle avatar-small' %>
                        <%= link_to room.listing_name, room %>
                      </div>
                    </div>
                  </div>
              <% end %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
<script>
    $(function () {
        $('#start_date').datepicker({
            dateFormat: 'dd/mm/yy',
            monthNames: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August',
                'September', 'October', 'November', 'December'],
            dayNamesMin: ['D', 'L', 'M', 'M', 'J', 'V', 'S'],
            minDate: 0,
            maxDate: '3m',
            onSelect: function (selected) {
                var newdate = new Date($('#start_date').datepicker('getDate'));
                newdate.setDate(newdate.getDate() + 1);
                $('#end_date').datepicker('option', 'minDate', newdate);
            }
        });

        $('#end_date').datepicker({
            dateFormat: 'dd/mm/yy',
            monthNames: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August',
                'September', 'October', 'November', 'December'],
            dayNamesMin: ['D', 'L', 'M', 'M', 'J', 'V', 'S'],
            minDate: 0,
            maxDate: '3m',
            onSelect: function (selected) {
                $('#start_date').datepicker('option', 'maxDate', selected);
            }
        });
    })
</script>