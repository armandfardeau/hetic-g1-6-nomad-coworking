<%= form_for([@room, @room.reviews.new]) do |f| %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <div id='user_stars'></div>
    <div class='form-group row-space-1'>
      <%= f.text_area :comment,
                      rows: 3,
                      class: 'form-control'
      %>
    </div>
    <div class='actions'>
      <%= f.submit 'Add review', class: 'btn btn-primary' %>
    </div>
<% end %>

<script>
    $('#user_stars').raty({
        path: '/assets',
        scoreName: 'review[star]',
        score: 1
    });
</script>